<section class="py-5">
  <div class="container my-lg-7">
    <div class="row">
      <div class="col-12">
        <div class="mb-5 text-center">
          <h2 class="mb-0">5G创新功能</h2>
        </div>
      </div>
    </div>

    <div class="row gy-4">
      {% for feature in features %}
        <div class="col-md-4 col-12">
          <div class="d-flex flex-column gap-4">
            <div>{{ feature.icon|raw }}</div>
            <div>
              <h4 class="mb-2">{{ feature.title }}</h4>
              <p>{{ feature.description }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="py-5">
  <div class="latest-news-block mb-2">
    <h2 class="mb-4">最新新闻</h2>
    <ul class="list-group">
      {% for item in news %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="{{ item['src'] }}" class="text-decoration-none text-dark">{{ item['title'] }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
<section class="py-5">
